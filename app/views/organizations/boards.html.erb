<div class="my-container">
  <div class="title-header align-items-center">
    <h1>Boards</h1>
    <% if user_signed_in? && (current_user.team_member? || current_user.super_team_member?) %>
      <%= link_to new_wishlist_path, class: 'ghost-button' do %>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    <% end %>
  </div>
  <% if @wishlists.empty? %>
    <div class="card-product">
      <p>There are no boards yet.</p>
      <p>Click on the button above to create one.</p>
    </div>
  <% else %>
    <%= render "wishlists/wishlists_cards", wishlists: @wishlists  %>
  <% end %>
</div>
