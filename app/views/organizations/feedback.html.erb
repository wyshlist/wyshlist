<div class="d-flex">
  <%= render "shared/sidebar" %>
  <div class="flex-grow-1">
    <%= render "shared/navbar" %>
    <div class="feedback-wrapper">
      <div class="feedback__column-left">
        <div class="wrapper-container">
          <div class="d-flex justify-content-between">
            <h2>Tickets</h2>
            <a href="#">+</a>
          </div>
          <div class="feedback-filter">
            <p>Backlog</p>
            <p>In process</p>
            <p>Completed</p>
            |
            <p>↕️</p>
            <p>↕️</p>
            <p>↕️</p>
          </div>
        </div>
        <% @wishes.each do |wish| %>
          <%= link_to wish_path(wish), data: {turbo_frame: "wish-view"} do %>
            <div class="card-wish wrapper-container">
              <p><strong><%= wish.title %></strong></p>
              <%= wish.description %>
              <ul class='list-inline'>
                <li class="list-inline-item"><%= image_tag 'star.png', alt: "text" %> 37</li>
                <li class="list-inline-item"><%= image_tag 'message-square.png', alt: "text" %> 37</li>
              </ul>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="feedback__column-right">
        <div class="wrapper-container">
          <%= turbo_frame_tag "wish-view" do %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
