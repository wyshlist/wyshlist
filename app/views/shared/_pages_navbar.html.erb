<div class="navbar navbar-expand-sm navbar-light navbar-lewagon border-bottom">
    <%= link_to authenticated_root_path do %>
        <%= image_tag 'logo.jpg', class: "logo" %>
    <% end %>
    <div class="container-fluid justify-content-end">
        <ul class="navbar-nav">
            <% if user_signed_in? %>
                <% if current_user.has_an_organization? %>
                    <li class="nav-item">
                        <%= link_to t('pages_navbar.public_preview'), wishlists_url(subdomain: current_user.organization.subdomain), target: "_blank", class: "ghost-button nav-link" %>
                    </li>
                <% end %>
                <li class="nav-item">
                    <%= link_to t('pages_navbar.log_out'), destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
                </li>
            <% else %>
                <li class="nav-item">
                    <%= link_to t('pages_navbar.log_in'), new_user_session_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to t('pages_navbar.create_account'), new_user_registration_path, class: "ghost-button nav-link" %>
                </li>
            <% end %>
        </ul>
    </div>
</div>