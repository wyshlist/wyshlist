<% content_for :meta_title, "#{@wish.title} | Wyshlist" %>
<% content_for :meta_description, @wish.description %>

<div class="my-container">
    <%= link_to "< Back", wishlist_wishes_path(@wish.wishlist) %> <br>
    <div class="card-product">
        <div class="card-product__info">
            <div class="card-product-infos">
                <h1><%= @wish.title %></h1>
                <small>Posted by <%= @wish.user.email %></small>
                <p><%= @wish.description %></p>
            </div>
        </div>
        <% if current_user.owner?(@wish.wishlist) %>
            <div>
                <%= render "stage_form" %>
            </div>
        <% else %>
            <div class="card-product__status" style="background-color: <%= @wish.stage_color %>">
                <%= @wish.stage %>
            </div>
        <% end %>
    </div>
    <div class="card-product__icons">
        <div class="card-product__icon">
            <small><i class="fas fa-comment"></i> <%= @wish.comments.count %> comments</small>
        </div>
    </div>
    <% @comments.each do |comment| %>
        <div class="card-comment">
            <%= image_tag "default-avatar.png", class: "avatar dropdown-toggle" %>
            <%#= image_tag comment.user.photo, alt: "text" %>
            <div class="card-product-infos">
                <p><strong><%= comment.user.email %></strong><p>
                <p><%= comment.content %></p>
            </div>
        </div>
    <% end %>
    <%= simple_form_for [@wish, @comment] do |f| %>
        <%= f.input :content %>
        <%= f.submit "Add comment", class: "btn-flat" %>
    <% end %>
</div>
