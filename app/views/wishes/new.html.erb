   
<%= turbo_frame_tag "new-wish" do %>
    <%= simple_form_for [@wishlist, @wish], id: "add-wish" do |f| %>
        <%= f.input :title, label: false, placeholder: "Title" %>
        <%= f.rich_text_area :description, label: false, placeholder: "Description", as: :text %>
        <%= f.submit "Add a wish", class: "btn-flat", data: { turbo: false }%>
    <% end %>
<% end %>