 <%= simple_form_for @wishlist do |f| %>
    <% if @organization %>
        <% f.hidden_field :organization, value: @organization %>
    <% end %>
    <%= f.input :title, required: true, label: "Insert a descriptive title", placeholder: "i.e: Product development, Improve wyshlist.net..." %>
    <%= f.input :description, label: "Summarize the goals of this board", placeholder: "Description", type: :text, placeholder: "i.e: This board is for the product development team..." %>
    <%= f.input :private, label: "Make this board private", input_html: { class: "toggle" } %>
    <%= f.submit "Submit", class: "btn-flat"%>
<% end %>